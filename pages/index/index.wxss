/**index.wxss**/
.index-container {
  text-align: center;
  padding: 0 48rpx;
}

.index-blank__img {
  margin-top: 248rpx;
  width: 528rpx;
  height: 368rpx;
}

.index-blank__text {
  margin-top: 30rpx;
  color: #B0BDC9;
  font-size: 32rpx;
  text-align: center;
  letter-spacing: 4rpx;
}

.add-btn {
  position: absolute;
  right: 48rpx;
  bottom: 40rpx;
  height: 140rpx;
  width: 130rpx;
  padding: 0;
  background: none;
}

.add-image {
  height: 150rpx;
  width: 150rpx;
  margin-left: -8rpx;
}

.add-btn.bubble:after {
  content: "";
  background: #d3dcf7;
  position: absolute;
  width: 130rpx;
  height: 130rpx;
  left: 0rpx;
  right: 0;
  top: -10rpx;
  bottom: 0;
  opacity: 0;
  margin: auto;
  border-radius: 50%;
  transform: scale(1);
  transform-origin: 50%;
  transition: all 0.75s ease-in-out;
}

.add-btn.bubble:active:after {
  transform: scale(0);
  opacity: 1;
  transition: 0s;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.plan-container {
  width: 100%;
}

.calendar-container {
  display:flex;
  align-items:center;
  line-height: 104rpx;
  margin-bottom: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.calendar__img {
  width: 40rpx;
  height: 40rpx;
}

.text-date {
  font-size: 28rpx;
  margin-left: 20rpx;
}

.calendar-box {
  position: absolute;
  top: 110rpx;
  left: 30rpx;
  width: 90%;
  height: 65%;
  z-index: 3;
  background: #fff;
}
.header-style{
  color: #59518d;
}
.calendar-board {
  color: #c7cbe2;
  font-weight: bold;
}

.plan-list-container {
  margin-top: 16rpx;
}

.plan-list__item {
  position: relative;
  height: 144rpx;
  margin-bottom: 40rpx;
  box-shadow:0rpx 20rpx 32rpx 0rpx rgba(108,145,255,0.04),0rpx -4rpx 20rpx 0rpx rgba(0,0,0,0.04);
  border-radius:12rpx;
  text-align: left;
}

.plan-icon__checkbox {
  position: absolute;
  left: 32px;
  line-height: 144rpx;
  font-size: 36rpx;
  color: #B0BDC9;
}

.plan-list__content {
  margin-left: 132rpx;
  color: #313131;
  font-size: 32rpx;
}

.single-content {
  height: 144rpx;
  line-height: 144rpx;
}

.complex-content {
  height: 114rpx;
  line-height: 48rpx;
  padding-top: 30rpx;
}

.plan-list__detail {
  color: #B0BDC9;
  font-size: 28rpx;
}

.mr18 {
  margin-right: 18rpx;
}