/**index.wxss**/
.index-container {
  text-align: center;
  padding: 0 48rpx;
}

.index-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 170rpx;
  background-color: #fff;
}

.index-blank__img {
  margin-top: 248rpx;
  width: 528rpx;
  height: 368rpx;
}

.index-blank__text {
  margin-top: 30rpx;
  color: #B0BDC9;
  font-size: 32rpx;
  text-align: center;
  letter-spacing: 4rpx;
}

.add-btn {
  position: fixed;
  right: 48rpx;
  bottom: 40rpx;
  height: 140rpx;
  width: 130rpx;
  padding: 0;
  background: none;
}

.add-image {
  height: 150rpx;
  width: 150rpx;
  margin-left: -8rpx;
}

.add-btn.bubble:after {
  content: "";
  background: #d3dcf7;
  position: absolute;
  width: 130rpx;
  height: 130rpx;
  left: 0rpx;
  right: 0;
  top: -10rpx;
  bottom: 0;
  opacity: 0;
  margin: auto;
  border-radius: 50%;
  transform: scale(1);
  transform-origin: 50%;
  transition: all 0.75s ease-in-out;
}

.add-btn.bubble:active:after {
  transform: scale(0);
  opacity: 1;
  transition: 0s;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.plan-container {
  width: 100%;
}

.plan-list-header {
  display:flex;
  justify-content: space-between;
  line-height: 104rpx;
  margin-bottom: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.calendar-container, .plan-btn-container {
  display: flex;
  align-items: center;
}

.btn-all-plans {
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  height: 26rpx;
  line-height: 104rpx;
  border: 1px solid #B0BDC9;
  color: #B0BDC9;
  font-size: 24rpx;
}

.calendar__img {
  width: 40rpx;
  height: 40rpx;
}

.text-date {
  font-size: 28rpx;
  margin-left: 20rpx;
}

.calendar-box {
  position: absolute;
  top: 110rpx;
  left: 30rpx;
  width: 90%;
  height: 65%;
  z-index: 10;
  background: #fff;
}
.header-style{
  color: #59518d;
}
.calendar-board {
  color: #c7cbe2;
  font-weight: bold;
}

.plan-list-container {
  margin-top: 16rpx;
  margin-bottom: 200rpx;
}

.plan-list__item {
  position: relative;
  height: 144rpx;
  margin-bottom: 40rpx;
  box-shadow:0rpx 20rpx 32rpx 0rpx rgba(108,145,255,0.04),0rpx -4rpx 20rpx 0rpx rgba(0,0,0,0.04);
  border-radius:12rpx;
  text-align: left;
}

.finished-item {
  background-color: #f5f5f5;
}

.finished-item .yo-icon-checked-square {
  color: #D2D2D2 !important;
}

.finished-item .plan-content__text {
  color: #919191;
  text-decoration: line-through;
}

.plan-icon__checkbox {
  position: absolute;
  left: 32rpx;
  top: 0;
  line-height: 144rpx;
  font-size: 40rpx;
  color: #B0BDC9;
}

.plan-list__content {
  padding-left: 100rpx;
  color: #313131;
  font-size: 32rpx;
  background: #fff;
}

.single-content {
  height: 144rpx;
  line-height: 144rpx;
}

.complex-content {
  height: 144rpx;
  line-height: 48rpx;
  padding-top: 30rpx;
  padding-right: 30rpx;
}

.plan-list__detail {
  color: #B0BDC9;
  font-size: 28rpx;
}

.handle-container {
  position: absolute;
  right: 0;
  top: 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  width: 240rpx;
  height: 144rpx;
  padding: 36rpx 20rpx;
  line-height: 144rpx;
  background: #FAFAFA;
  z-index: 1;
}

.handle-icon {
  width: 72rpx;
  height: 72rpx;
}

.mr18 {
  margin-right: 18rpx;
}

.plan-list__num {
  position: fixed;
  bottom: 68rpx;
  left: 48rpx;
  color: #B0BDC9;
  font-size: 24rpx;
}

.plan-checkbox__level-0 .yo-icon {
  color: #FFC107;
}

.plan-checkbox__level-1 .yo-icon {
  color: #FFC107;
}

.plan-checkbox__level-2 .yo-icon {
  color: #F55F5F;
}

.inner{
  position: absolute;
  top:0;
}
.inner.txt{
  width: 100%;
  z-index: 5;
  transition: left 0.2s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  box-sizing:border-box;
}
